#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd;
    char writeData[100] = "This program demonstrates UNIX file management system calls.";
    char readData[100];
    int bytes;

    /* Create and open file */
    fd = open("demo.txt", O_CREAT | O_RDWR, 0644);
    if (fd < 0) {
        perror("File open error");
        return 1;
    }

    /* Write to file */
    write(fd, writeData, strlen(writeData));

    /* Move file pointer to beginning */
    lseek(fd, 0, SEEK_SET);

    /* Read from file */
    bytes = read(fd, readData, sizeof(readData) - 1);
    readData[bytes] = '\0';

    /* Display file content */
    printf("Data read from file:\n%s\n", readData);

    /* Close file */
    close(fd);

    return 0;
}
